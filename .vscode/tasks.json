{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build",
      "command": "g++",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true
      },
      "args": [
        "-std=c++17",
        "-Wall",
        "./**/*.cpp",
        "-o", "qrypt",
        "&&", "./qrypt"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
